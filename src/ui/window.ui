<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <object class="GtkPopover" id="sideMenu">
    <child>
      <object class="GtkBox">
        <property name="visible">True</property>
        <property name="width_request">300</property>
        <property name="height_request">400</property>
        <property name="orientation">vertical</property>
        <property name="margin">10</property>
        <property name="spacing">10</property>
        <child>
          <object class="GtkStackSwitcher">
            <property name="visible">True</property>
            <property name="homogeneous">True</property>
            <property name="stack">contentsStack</property>
          </object>
        </child>
        <child>
          <object class="FoliateContentsStack" id="contentsStack">
            <property name="visible">True</property>
          </object>
        </child>
      </object>
    </child>
  </object>
  <object class="GtkPopover" id="findMenu">
    <child>
      <object class="FoliateFindBox" id="findBox">
        <property name="visible">True</property>
        <property name="width-request">300</property>
        <property name="orientation">vertical</property>
        <property name="margin">10</property>
        <property name="spacing">10</property>
      </object>
    </child>
  </object>

  <object class="FoliateMainMenu" id="mainMenu"></object>

  <template class="FoliateWindow" parent="GtkApplicationWindow">
    <property name="default_width">360</property>
    <property name="default_height">640</property>
    <signal name="window-state-event" handler="_onWindowStateEvent"/>
    <signal name="size-allocate" handler="_onSizeAllocate"/>
    <signal name="destroy" handler="_onDestroy"/>
    <child type="titlebar">
      <object class="GtkFrame" id="headerBarContainer">
        <property name="visible">True</property>
        <property name="shadow-type">none</property>
        <style><class name="distraction-free-container"/></style>
        <child>
          <object class="GtkEventBox" id="headerBarEventBox">
            <property name="visible">True</property>
            <child>
              <object class="GtkOverlay">
                <property name="visible">True</property>
                <child>
                  <!--
                  the dummy headerbar ensure that enough height is allocated
                  for the reveal of the real headerbar
                  -->
                  <object class="GtkHeaderBar" id="dummyHeaderBar">
                    <property name="visible">True</property>
                    <property name="opacity">0</property>
                    <property name="has-subtitle">False</property>
                    <child>
                      <object class="GtkMenuButton">
                        <property name="visible">True</property>
                      </object>
                    </child>
                  </object>
                </child>
                <child type="overlay">
                  <object class="GtkLabel" id="distractionFreeTitle">
                    <property name="visible">True</property>
                    <property name="ellipsize">end</property>
                    <property name="margin-right">18</property>
                    <property name="margin-left">18</property>
                    <property name="opacity">0.5</property>
                    <style><class name="distraction-free-label"/></style>
                  </object>
                </child>
                <child type="overlay">
                  <object class="GtkRevealer" id="headerBarRevealer">
                    <property name="visible">True</property>
                    <property name="reveal-child">False</property>
                    <property name="transition-type">crossfade</property>
                    <child>
                      <object class="GtkHeaderBar" id="headerBar">
                        <property name="visible">True</property>
                        <property name="has-subtitle">False</property>
                        <property name="show-close-button">True</property>
                        <child>
                          <object class="GtkMenuButton" id="sideMenuButton">
                            <property name="visible">True</property>
                            <property name="valign">center</property>
                            <property name="popover">sideMenu</property>
                            <property name="tooltip_text" translatable="yes">Contents</property>
                            <child>
                              <object class="GtkImage">
                                <property name="visible">True</property>
                                <property name="icon_name">view-list-symbolic</property>
                              </object>
                            </child>
                          </object>
                        </child>
                        <child>
                          <object class="GtkMenuButton" id="mainMenuButton">
                            <property name="visible">True</property>
                            <property name="valign">center</property>
                            <property name="popover">mainMenu</property>
                            <property name="tooltip_text" translatable="yes">Menu</property>
                            <child>
                              <object class="GtkImage">
                                <property name="visible">True</property>
                                <property name="icon_name">open-menu-symbolic</property>
                              </object>
                            </child>
                          </object>
                          <packing>
                            <property name="pack_type">end</property>
                          </packing>
                        </child>
                        <child>
                          <object class="GtkMenuButton" id="findMenuButton">
                            <property name="visible">True</property>
                            <property name="valign">center</property>
                            <property name="popover">findMenu</property>
                            <property name="tooltip_text" translatable="yes">Find</property>
                            <child>
                              <object class="GtkImage">
                                <property name="visible">True</property>
                                <property name="icon_name">edit-find-symbolic</property>
                              </object>
                            </child>
                          </object>
                          <packing>
                            <property name="pack_type">end</property>
                          </packing>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkOverlay" id="fullscreenOverlay">
        <property name="visible">True</property>
        <child>
          <object class="FoliateMainOverlay" id="mainOverlay">
            <property name="visible">True</property>
          </object>
        </child>
        <child type="overlay">
          <object class="GtkEventBox" id="fullscreenEventbox">
            <property name="valign">start</property>
            <child>
              <object class="GtkRevealer" id="fullscreenRevealer">
                <property name="visible">True</property>
                <property name="can_focus">False</property>
                <property name="reveal_child">False</property>
                <property name="valign">start</property>
                <child>
                  <object class="GtkHeaderBar" id="fullscreenHeaderbar">
                    <property name="visible">True</property>
                    <child>
                      <object class="GtkMenuButton" id="fullscreenSideMenuButton">
                        <property name="visible">True</property>
                        <property name="valign">center</property>
                        <property name="popover">sideMenu</property>
                        <property name="tooltip_text" translatable="yes">Contents</property>
                        <child>
                          <object class="GtkImage">
                            <property name="visible">True</property>
                            <property name="icon_name">view-list-symbolic</property>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="GtkButton">
                        <property name="visible">True</property>
                        <property name="valign">center</property>
                        <property name="tooltip-text" translatable="yes">Leave fullscreen</property>
                        <property name="action-name">win.unfullscreen</property>
                        <child>
                          <object class="GtkImage">
                            <property name="visible">True</property>
                            <property name="icon_name">view-restore-symbolic</property>
                          </object>
                        </child>
                      </object>
                      <packing>
                        <property name="pack_type">end</property>
                      </packing>
                    </child>
                  <child>
                    <object class="GtkSeparator" id="separator">
                      <property name="visible">True</property>
                    </object>
                    <packing>
                      <property name="pack_type">end</property>
                    </packing>
                  </child>
                    <child>
                      <object class="GtkMenuButton" id="fullscreenMainMenuButton">
                        <property name="visible">True</property>
                        <property name="valign">center</property>
                        <property name="popover">mainMenu</property>
                        <property name="tooltip_text" translatable="yes">Menu</property>
                        <child>
                          <object class="GtkImage">
                            <property name="visible">True</property>
                            <property name="icon_name">open-menu-symbolic</property>
                          </object>
                        </child>
                      </object>
                      <packing>
                        <property name="pack_type">end</property>
                      </packing>
                    </child>
                    <child>
                      <object class="GtkMenuButton" id="fullscreenFindMenuButton">
                        <property name="visible">True</property>
                        <property name="valign">center</property>
                        <property name="popover">findMenu</property>
                        <property name="tooltip_text" translatable="yes">Find</property>
                        <child>
                          <object class="GtkImage">
                            <property name="visible">True</property>
                            <property name="icon_name">edit-find-symbolic</property>
                          </object>
                        </child>
                      </object>
                      <packing>
                        <property name="pack_type">end</property>
                      </packing>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
